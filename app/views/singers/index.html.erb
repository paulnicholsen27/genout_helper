
<h3>Singers</h3>

<%= button_to 'New Singer', new_singer_path, class: "btn btn-primary", method: "get" %>
<table class="table table-hover" id="sortable_table">
  <thead>
    <tr class="table-active">
      <th scope="col" class="sortable">First name <i class="fa fa-sort"></i></th>
      <th scope="col" class="sortable">Last name <i class="fa fa-sort"></i></th>
      <th scope="col">Phone number</th>
      <th scope="col">Birthday</th>
      <th scope="col">Pronoun</th>
      <th scope="col" class="sortable">Active? <i class="fa fa-sort"></i></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @singers.each do |singer| %>
      <tr>
        <td><%= singer.first_name %></td>
        <td><%= singer.last_name %></td>
        <td><%= number_to_phone(singer.display_phone_number) %></td>
        <td><%= singer.display_birthday %></td>
        <td><%= singer.pronoun %></td>
        <% if singer.active? %>
          <td class="green">Yes</td>
        <% else %>
          <td class="gray">No</td>
        <% end %>
        <td><%= link_to 'Show', singer %> | <%= link_to 'Edit', edit_singer_path(singer) %> | <%= link_to 'Remove', singer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

