<%= form_with(url: send_text_path) do |form| %>
<% if false  %>
  <% if singer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(singer.errors.count, "error") %> prohibited this singer from being saved:</h2>

      <ul>
        <% singer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <% end %>
 
  <div class="field">
    <%= form.label :message %>
    <small id="passwordHelpBlock" class="form-text text-muted">
        <div>To substitute the recipient's name, use the word FIRSTNAME.</div>
        <div>Ex:  "Hi FIRSTNAME!  Don't forget to practice your music!" becomes "Hi Pat!  Don't forget to practice your music!"</div>
    </small>
    <%= form.text_area :message %>
  </div>

  <h4>Recipients</h4>

    <div class="form-check">

        <%= collection_check_boxes(:recipient, :ids, @singers, :id, :first_name) do |b| %>
            <%= b.label  do %>
                <%= b.check_box class: "form-check-input" %>
                <%= b.text %> 
            <% end %>
        <% end %>
    </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
