<%= render partial: "confirm_text_modal" %>


<%= form_with(url: send_text_path, id: 'send-text-form')  do |form| %>

 
  <div class="field">
    <%= form.label :message %>
    <small id="passwordHelpBlock" class="form-text text-muted">
        <div>To substitute the recipient's name, click <button id="first_name_button">Insert First Name</button>.</div>
        <div>Ex:  "Hi {FIRSTNAME}!  Don't forget to practice your music!" becomes "Hi Pat!  Don't forget to practice your music!"</div>
    </small>
    <%= form.text_area :message %>
  </div>

  <h4>Recipients</h4>

    <div class="form-check">

        <%= collection_check_boxes(:recipient, :ids, @singers, :id, :first_name) do |b| %>
            <%= b.label  do %>
                <%= b.check_box class: "form-check-input" %>
                <%= b.text %> 
            <% end %>
        <% end %>
    </div>
  <div class="actions">
    <input type="button" name="btn" value="Send" id="submitBtn" data-toggle="modal" data-target="#confirm-submit" class="btn btn-default" />

  </div>
<% end %>

